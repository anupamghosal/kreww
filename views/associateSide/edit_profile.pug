extends ../layout

block content

  link(rel='stylesheet', href='/styles/profile.css', type='text/css')
  link(rel='stylesheet', href='/styles/edit_prof.css', type='text/css')
  .wrapper
    .user-info
      .avatar
      a.edit(href='/associate/profile') 
        span.icon &#10004
        span.label Save
      .user-name
        h1= user.firstName
        h1= user.lastName
    
    .user-detail
      ul.user-details
        li.user-detail-item
          h3 Email :
          input(type='email', value=user.email, name='email')
        li.user-detail-item
          h3 Saved address :
          if user.address
            input(type='text', value=user.address, name='aaddress')
          if !user.address
            div No address added
        li.user-detail-item
          h3 Contact Number :
          if user.phone
            input(type='number', value=user.phone, name='phone')
          if !user.phone
            div.detail No phone Number added
        li.user-detail-item
          h3 Saved cards :
          if user.card
            div.detail #{user.card}
          if !user.card
            div.detail No saved cards
